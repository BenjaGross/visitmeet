<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
<div class="container">
<div class="container-fluid">
  <table class="table table-stripped">
    <thead>
      <tr>
        <th>
          Title
        </th>
        <th>
          Description
        </th>
        <th>
          Category
        </th>
        <th>
          Price
        </th>
        <th>
          User ID
        </th>
        <th>
          Location
        </th>
        <th>
          Latitude
        </th>
        <th>
          Longitude
        </th>
        <th>
          Show
        </th>
        <th>
          Edit
        </th>
        <th>
          Destroy
        </th>
      </tr>
    </thead>

  <% @products.each do |product| %>
  <tbody>
    <tr>
        <td><%= product.title %></td>
        <td>  <%= product.description %></td>
        <td><%= product.category %></td>
        <td>  US$: <%= product.price%></td>
        <td> <%= product.user_id %></td>
        <td>
          <%= product.location %>
        </td>
        <td>
          <%= product.latitude %>
        </td>
        <td>
          <%= product.longitude %>
        </td>
        <td><%= link_to 'Show', product_path(product) %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product_path(product),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
    </tr>
  </tbody>
  <% end %>
</table>





</div>
<%= link_to 'New Product', new_product_path, 'data-no-turbolink' => true %>

<div class="container">
  <div id="map" style='width: 100%; height: 500px;'></div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @map_hash.to_json %>);
  handler.map.centerOn(markers[0]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});

</script>
