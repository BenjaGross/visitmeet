<div class="container">
  <div class="container-fluid">
    <div class="container">
      <div class="well well-sm">
        <strong>List by</strong>
        <div class="btn-group">
          <a href="#" id="list" class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-th-list"></span>
            List
          </a>
          <a href="#" id="grid" class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-th"></span>
            Grid
          </a>
        </div>
        <%= link_to 'New Product', new_product_path, 'data-no-turbolink': true, class: 'btn btn-primary pull-right' %>
      </div>
      <p>
        Press image to see larger
      </p>
      <div id="products" class="row list-group">
        <% @products.each do |product| %>
          <div class="item  col-xs-4 col-lg-4">
            <div class="thumbnail">
              <a href="/assets/awareness-snowflame.jpg" target="_blank">
                <img class="group list-group-image" src="/assets/awareness-snowflame-thumb.jpg" alt="Star Art of AWARENESS" />
              </a>
              <div class="caption">
                <h4 class="group inner list-group-item-heading">
                  Title: <%= product.title %>
                </h4>
                <p class="group inner list-group-item-text">
                  Descriptioin: <%= product.description %>
                </p>
                <p class="group inner list-group-item-text">
                  Location: <%= product.location %>
                </p>
                <div class="row">
                  <div class="col-xs-12 col-md-6">
                    <p class="lead">
                      Price: <small>usd</small> $: <%= product.price %>
                    </p>
                  </div>
                  <div class="col-xs-12 col-md-6">
                    <!-- TODO: replace below when cart installed -->
                    <a class="btn btn-success" href="/products/1">Meet the Artist</a>
                    <!-- a class="btn btn-success" href="real link when ready">Add to Cart</a -->
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
